# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./court_fetcher.db
DB_LOGGING=false

# File Storage
UPLOADS_DIR=./backend/uploads
MAX_FILE_SIZE=10485760

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Court Websites (for reference)
DELHI_HC_URL=https://delhihighcourt.nic.in
ECOURTS_URL=https://ecourts.gov.in

# Security
CORS_ORIGIN=http://localhost:3000
API_KEY=your_api_key_here

# Scraping Configuration
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=2000
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Feature Flags
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_RATE_LIMITING=true

# Optional: If using external services
# CAPTCHA_API_KEY=your_captcha_solver_api_key
# PROXY_URL=http://your-proxy:port